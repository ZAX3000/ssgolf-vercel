{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "nodeNext",                     // Use Nodeâ€™s next-generation ESM settings
    "moduleResolution": "nodeNext",           // Use NodeNext resolution strategy
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,                          // We need to emit JS files for Node to run
    "outDir": "dist",
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,                  // Allows default imports for commonjs modules
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "scripts"]
}